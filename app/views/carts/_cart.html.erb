<% unless cart.line_items.empty? %>
<h2>Your Cart</h2>
<table>
  <%= render(cart.line_items) %>

  <tr class="total_line">
    <td colspan="2">Total</td>
    <td class="total_cell"><%= number_to_currency(cart.total_price) %></td>
  </tr>
</table>

<div class="button" style="padding: 0;">
  <div class="leftbtn "style="float: left"><%= button_to "Checkout", new_order_path, method: :get %></div>
  <div style="float: left; padding-left: 10px"><%= button_to 'Empty cart', cart, method: :delete,
          data: { confirm: 'Are you sure?' } %></div>
</div>

<% end %>
